<Window x:Class="Ex3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ex3"
        mc:Ignorable="d"
        Title="SE193112_NguyenTranThinh" Height="450" Width="800">
    <Grid>
        <GroupBox Header="Bạn cảm thấy thế nào?" Margin="32,44,550,261">
            <StackPanel Height="107">
                <RadioButton x:Name="rbRatTot" Content="Rất Tốt" Margin="10,5"/>
                <RadioButton x:Name="rbCungTot" Content="Cũng tốt" Margin="10,5"/>
                <RadioButton x:Name="rbTamDuoc" Content="Tạm được" Margin="10,5"/>
                <RadioButton x:Name="rbKhoNoi" Content="Khó nói" Margin="10,5"/>
            </StackPanel>
        </GroupBox>
        <GroupBox Header="Giới tính của bạn là gì?" Height="81" Margin="32,178,589,175">
            <StackPanel Orientation="Horizontal" Margin="10,0">
                <RadioButton x:Name="rbNam" Content="Nam" Margin="0,5,10,5"/>
                <RadioButton x:Name="rbNu" Content="Nữ" Margin="0,5"/>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="Chọn tác vụ" Margin="32,284,468,50" Width="300" Height="100">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button Content="Gửi phản hồi" Width="109" Height="35" Margin="10" Click="BtnGui_Click"/>
                <Button Content="Hủy" Width="109" Height="35" Margin="10" Click="BtnHuy_Click"/>
            </StackPanel>
        </GroupBox>

    </Grid>
</Window>

<Window x:Class="BaiTap1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BaiTap1"
        mc:Ignorable="d"
        Title="SE193112-Nguyen Tran Thinh" Height="450" Width="800">
    <Grid x:Name="TinhTong">
        <Button x:Name="btnTong" HorizontalAlignment="Left" Height="38" Margin="178,365,0,0" VerticalAlignment="Top" Width="124">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Image Source="/Images/Sum.png" Stretch="Fill" Height="20" Width="20" Margin="0,0,5,0"/>
                <TextBlock Text="Tổng" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>
        <Button x:Name="btnQuit" HorizontalAlignment="Left" Height="38" Margin="382,365,0,0" VerticalAlignment="Top" Width="146" Click="btnQuit_Click_1">
            <Image Height="32" Source="/Images/quit.png" Stretch="Fill" Width="20" Margin="0,0,5,0">
               
            </Image>
        </Button>
        <TextBox x:Name="txtHeso1" HorizontalAlignment="Left" Height="27" Margin="178,172,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="328"/>
        <TextBox x:Name="txtHeso2" HorizontalAlignment="Left" Height="27" Margin="178,243,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="328" TextChanged="TextBox_TextChanged"/>
        <Label Content="He so 1" HorizontalAlignment="Left" Margin="178,144,0,0" VerticalAlignment="Top"/>
        <Label Content="He so 2" HorizontalAlignment="Left" Margin="178,217,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtTong" HorizontalAlignment="Left" Height="27" Margin="178,314,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="328" TextChanged="TextBox_TextChanged" Background="#FFF2FF19"/>
        <Label Content="Tong" HorizontalAlignment="Left" Margin="178,288,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>

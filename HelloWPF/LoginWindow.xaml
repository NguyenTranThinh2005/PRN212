<Window x:Class="HelloWPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HelloWPF"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <Label Content="Đăng nhập" HorizontalAlignment="Center" Margin="0,65,0,0" VerticalAlignment="Top" FontSize="24" FontFamily="Adobe Fan Heiti Std B" Foreground="#FF4769D2" Background="#FFBBF061"/>
        <Button x:Name="btnLogin" Content="Đăng nhập" HorizontalAlignment="Left" Margin="299,333,0,0" VerticalAlignment="Top" FontSize="20" Click="btnLogin_Click"/>
        <Button x:Name="btnQuit" Content="Thoát" HorizontalAlignment="Left" Margin="432,333,0,0" VerticalAlignment="Top" FontSize="20" Width="116" Click="btnQuit_Click"/>
        <Label Content="Username" HorizontalAlignment="Left" Margin="150,168,0,0" VerticalAlignment="Top" FontSize="36"/>
        <TextBox x:Name="txtUsrName" HorizontalAlignment="Left" Margin="342,176,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="296" Height="41"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="150,235,0,0" VerticalAlignment="Top" FontSize="36"/>
        <PasswordBox x:Name="txtPwd" HorizontalAlignment="Left" Margin="342,255,0,0" VerticalAlignment="Top" Width="296" Height="38"/>

    </Grid>
</Window>
